<div class="max-w-md mx-auto mt-10 bg-gray-900 rounded-xl shadow-lg p-8 border border-fuchsia-700">
  <h1 class="text-3xl font-bold text-center text-white mb-6">Sign In</h1>
  <% if flash[:alert] %>
    <div class="mb-4 text-red-400"><%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
    <div class="mb-4 text-green-400"><%= flash[:notice] %></div>
  <% end %>
  <%= form_with url: session_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email_address, class: "block text-white mb-2" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "w-full px-4 py-2 rounded-full bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-fuchsia-700" %>
    </div>
    <div class="mb-6">
      <%= form.label :password, class: "block text-white mb-2" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "w-full px-4 py-2 rounded-full bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-fuchsia-700" %>
    </div>
    <div>
      <%= form.submit "Sign In", class: "w-full py-2 rounded-full bg-fuchsia-700 text-white font-bold hover:bg-fuchsia-800 transition" %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "Forgot password?", new_password_path, class: "text-fuchsia-400 hover:underline" %>
  </div>
</div>
